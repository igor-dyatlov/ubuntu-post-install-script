#!/bin/bash

# Gravit
function gravit {
	show_info 'Downloading Gravit...'
	# Download Debian file that matches system architecture
	curl -O https://github.com/quasado/gravit-hub/releases/download/v1.0-rc1/Gravit-Linux.zip
	show_info 'Extraction Gravit...'
	tar xzvf ./Telegram
	# Install package(s)
	show_info 'Installing Gravit...'
	show_warning 'Requires root privileges'
	sudo mv Telegram /opt/Gravit
	# Create symbolic link
	show_info 'Creating symbolic link...'
	show_warning 'Requires root privileges'
	sudo ln -sf /opt/telegram /usr/bin/telegram
	# Cleanup and finish
  rm tsetup*.tar.xz *.strings
	# Done
  show_success 'Done.'
  whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
