#!/bin/bash

# Nvidia Linux Display Driver
function nvidia {
    # Add repository
    show_info 'Adding Nvidia Linux Display Driver to software sources...'
    show_warning 'Requires root privileges'
    sudo add-apt-repository -y ppa:xorg-edgers/ppa
    sudo add-apt-repository -y ppa:graphics-drivers/ppa
	# Update repository information
	show_info 'Updating repository information...'
	sudo apt-get update
	# Install
    echo 'Installing Nvidia Linux Display Driver...'
    show_warning 'Requires root privileges'
    sudo apt-get install -y nvidia-349 nvidia-358 nvidia-prime nvidia-settings 
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
