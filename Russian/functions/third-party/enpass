#!/bin/bash

# Enpass
function enpass {
	# Add repository
	show_info 'Adding Enpass PPA repository to software sources...'
	show_warning 'Requires root privileges'
	sudo sh -c "echo 'deb http://repo.sinew.in/ stable main /' >> /etc/apt/sources.list.d/enpass.list"
	show_success 'Done.'
	show_question 'Adding repository key...'
	curl -O http://repo.sinew.in/keys/enpass-linux.key
	sudo apt-key add - < Release.key
	show_success 'Done.'
	# Update repository information
	show_info 'Updating repository information...'
	show_warning 'Requires root privileges'
	sudo apt-get update
	# Install
	show_info 'Installing Enpass...'
	show_warning 'Requires root privileges'
	sudo apt-get install -y enpass
  # Done
  show_success 'Done.'
  whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
