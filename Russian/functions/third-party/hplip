#!/bin/bash

# HP Linux Imaging and Printing
function hplip {
    # Download Debian file that matches system architecture
    show_info 'Download HPLIP 3.15.11 Linux Imaging and Printing...'
    show_warning 'Requires root privileges'
    curl -O http://sourceforge.net/projects/hplip/files/hplip/3.15.11/hplip-3.15.11.run/download
	# Set Permission File
	show_info 'Set Permission File...'
	sudo chmod +x hplip*.run
	# Install
    echo 'Installing HP Linux Imaging and Printing...'
    show_warning 'Requires root privileges'
    ./hplip*.run
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
