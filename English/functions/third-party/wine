#!/bin/bash

# Wine
function wine {
  # Add repository
  show_info 'Adding Wine to software sources...'
  show_warning 'Requires root privileges'
  sudo add-apt-repository -y ppa:ubuntu-wine/ppa
	# Update repository information
	show_info 'Updating repository information...'
  show_warning 'Requires root privileges'
	sudo apt-get update
	# Install
  show_info 'Installing Wine...'
  show_warning 'Requires root privileges'
  sudo apt-get install -y wine1.8 winetricks
  # Install dependencies
  show_info 'Downloading dependent 32-bit libraries...'
	show_warning 'Requires root privileges'
  # Download Debian file that matches system architecture
	case `uname -i` in
	    x86_64)
	           dpkg --add-architecture i386
	        ;;
	    *)
	        show_error "No packages available to download that matches your system." && thirdparty
	        ;;
	esac
  # Done
  show_success 'Done.'
  whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
