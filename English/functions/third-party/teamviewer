#!/bin/bash

# TeamViewer
function teamviewer {
	show_info 'Downloading TeamViewer...'
	# Download Debian file that matches system architecture
	case `uname -i` in
	    i386|i486|i586|i686)
	        curl -O http://downloadap1.teamviewer.com/download/version_11x/teamviewer_11.0.53191_i386.deb
	        ;;
	    x86_64)
	        curl -O http://downloadap1.teamviewer.com/download/version_11x/teamviewer_11.0.53191_amd64.deb
	        ;;
	    *)
	        show_error "No packages available to download that matches your system." && thirdparty
	        ;;
	esac
	# Install package(s)
	show_info 'Installing TeamViewer...'
	show_warning 'Requires root privileges'
	sudo dpkg -i teamviewer*.deb	
	sudo apt-get install -fy
    # Install dependencies
    show_info 'Downloading dependent 32-bit libraries...'
	show_warning 'Requires root privileges'
    # Download Debian file that matches system architecture
	case `uname -i` in
	    x86_64)
	           dpkg --add-architecture i386
	        ;;
	    *)
	        show_error "No packages available to download that matches your system." && thirdparty
	        ;; 
	esac
	# Install dependencies
	show_info 'Installing TeamViewer dependencies...'
	show_warning 'Requires root privileges'
	case `uname -i` in
	    i386|i486|i586|i686)
	        sudo apt-get install -y libc6 libgcc1 libasound2 libdbus-1-3 libexpat1 libfontconfig1 libfreetype6 libjpeg62 libpng12-0 libsm6 libxdamage1 libxext6 libxfixes3 libxinerama1 libxrandr2 libxrender1 libxtst6 zlib1g
	        ;;
	    x86_64)
	        sudo apt-get install -y libjpeg62 lib32asound2, lib32z1, libxext6, ia32-libs libc6-i386
	        ;;
	    *)
	        show_error "No packages available to download that matches your system." && thirdparty
	        ;;
	esac
	# Cleanup and finish
	rm teamviewer*.deb
	show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
