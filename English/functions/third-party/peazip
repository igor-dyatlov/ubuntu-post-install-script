#!/bin/bash

# Brackets
function brackets {
	show_info 'Downloading Brackets...'
	# Download Debian file that matches system architecture
	case `uname -i` in
	    i386|i486|i586|i686)
	        curl -O http://sourceforge.net/projects/peazip/files/5.9.1/peazip_5.9.1.LINUX.GTK2-2_i386.deb
	        ;;
	    x86_64)
	        curl -O http://sourceforge.net/projects/peazip/files/5.9.1/peazip_5.9.1.LINUX.GTK2-2_all.deb
	        ;;
	    *)
	        show_error "No packages available to download that matches your system." && thirdparty
	        ;; 
	esac
	# Install package(s)
	show_info 'Installing Brackets...'
	show_warning 'Requires root privileges'
	sudo dpkg -i Brackets*.deb
	sudo apt-get install -fy
	
	
	sudo apt-get install libatk1.0-0:i386 libc6:i386 libcairo2:i386 libgdk-pixbuf2.0-0:i386 libglib2.0-0:i386 libgtk2.0-0:i386 libpango1.0-0:i386 libx11-6:i386 libcanberra-gtk-module:i386
	
	
	# Cleanup and finish
	rm steam*.deb
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
